{
  "name": "spreact",
  "version": "0.13.0",
  "description": "'Just enough structure' for single page web apps with React",
  "main": "spreact.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "nodemon demo/index.js",
    "build": "browserify -s spreact -t babelify -p browserify-derequire -o spreact.js src/spreact.js",
    "prepublish": "npm run build",
    "test": "./node_modules/karma/bin/karma start karma.conf.js --single-run",
    "autotest": "./node_modules/karma/bin/karma start karma.conf.js"
  },
  "keywords": [
    "react",
    "spa",
    "data flow"
  ],
  "author": "Christian Johansen",
  "license": "ISC",
  "devDependencies": {
    "babelify": "~6.3.0",
    "browserify": "^11.1.0",
    "browserify-derequire": "^0.9.4",
    "browserify-middleware": "~7.0.0",
    "express": "~4.13.3",
    "jasmine-core": "^2.3.4",
    "karma": "^0.13.10",
    "karma-browserify": "^4.3.0",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jasmine": "^0.3.6",
    "karma-referee": "^0.4.2",
    "karma-safari-launcher": "^0.1.1",
    "nodemon": "~1.4.1",
    "react": "~0.13.3",
    "referee-sinon": "^1.0.2",
    "sinon": "^1.17.0"
  }
}
